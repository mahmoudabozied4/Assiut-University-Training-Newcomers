#include <bits/stdc++.h>
using namespace std;
#define int long long

signed main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    int n ;
    cin >> n ;
    for (int i = 1; i <=n ; ++i) {
        for (int j = 1; j <=n-i ; ++j) {
            cout << " " ;
            
        }
        for (int j = 1; j <= 2 * i - 1; j++) {
            cout << "*";
        }

        cout << endl;
    }
   return 0;
}
